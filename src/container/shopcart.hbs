<main>
    <section>
        <div>
            <ul class="nav">
                {{#each navigation.links}}
                <li class="nav-item">
                    <a class="nav-link active {{#if @last}} nav-link disabled {{/if}}" href="{{href}}">
                        {{text}}</a>
                </li>
                {{/each}}
            </ul>
        </div>
    </section>
    <hr>
    <section>
        <h1> {{header.title}}</h1>
        {{#with header.button}}
        <a class="btn btn-outline-dark" href="{{link}}"> {{text}}</a>
        {{/with}}
    </section>
    <hr>
    <section>
        <div class="row">
            {{#each goodsBlock}}
            <div class="card col-12 m-2">
                <div class="row">
                    <div class="col-2 pt-1">
                        <img src="{{image}}" class="card-img-top" alt="image">
                    </div>
                    <div class="col-4 pt-3">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text"> {{description}}</p>
                    </div>
                    <div class="col-2 pt-5">
                        {{price.title}}: {{price.value}}
                    </div>
                    <div class="col-2 pt-5">
                        {{amount}}
                    </div>
                    <div class="col-2 pt-2">
                        <div class="row ">
                            {{#each buttons}}
                            <div class="col-12 m-2">
                                {{#if isPrimary}}
                                <button type="button" class="btn btn-primary">{{text}}</button>
                                {{/if}}
                            </div>
                            <div class="col-12">
                                {{#if isDanger}}
                                <button type="button" class="btn btn-outline-danger">{{text}}</button>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
    <br>
    <hr>
    <br>
    <section>
        <div>
            {{#with total}}
            <h2> {{title}}</h2>
            <b> {{amount}}</b>
            <p> {{delivery}}</p>
            <div>
                {{#each buttons}}
                <div class="col-3 mb-2">
                    {{#if isSuccess}}
                    <a href="{{link}}" class="btn btn-success"> {{text}}</a>
                    {{/if}}
                </div>
                <div>
                    {{#if isOutline}}
                    <a href="{{link}}" class="btn btn-outline-success"> {{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </section>
    <br>
    <hr>
    <br>
    <section class="row">
        <div>
            {{#with goodsOtherBlock}}
            <h2 class="text-center"> {{title}}</h2>
            <div class="row">
                {{#each cards}}
                <div class="card col-4">
                    <img src="{{image}}" class="card-img-top" alt="image">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}
                            {{#if isHot}} <span class="badge rounded-pill bg-warning">Hot</span>{{/if}}
                            {{#if isNew}}<span class="badge rounded-pill bg-primary">New</span>{{/if}}</h5>
                        <p class="card-text"> {{description}} </p>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </section>
    <br>
    <hr>
    <br>
    <section class="row">
        <div class="card text-bg-dark">
            {{#with subscribe}}
            <h2>{{header}}</h2>
            <p> {{description}}</p>
            <div>
                {{#each buttons}}
                <div class="col-3 m-2">
                    <a href="{{link}}" class="btn btn-primary"> {{text}}</a>
                </div>
                {{/each}}
            </div>

            {{/with}}
        </div>
    </section>
    <br>
    <hr>
    <br>
    <section class="row">
        {{#each footer}}
        <div class="nav col-2">
            <div>
                {{#each this}}
                <div>
                    <a class="nav-link {{#if @last}} disabled{{/if}}" href="{{this.link}}"> {{this.text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </section>


</main>