<main>
    {{>shopheader}}
    <hr>
    <section>
        <h1> {{header.title}}</h1>
        {{#with header.button}}
        <a class="btn btn-outline-dark" href="{{link}}"> {{text}}</a>
        {{/with}}
    </section>
    <hr>
    <div>
        {{>cartGoodsItem}}
    </div>
    <br>
    <hr>
    <br>
    <section>
        <div>
            {{#with total}}
            <h2> {{title}}</h2>
            <b> {{amount}}</b>
            <p> {{delivery}}</p>
            <div>
                {{#each buttons}}
                <div class="col-3 mb-2">
                    {{#if isSuccess}}
                    <a href="{{link}}" class="btn btn-success"> {{text}}</a>
                    {{/if}}
                </div>
                <div>
                    {{#if isOutline}}
                    <a href="{{link}}" class="btn btn-outline-success"> {{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </section>
    <br>
    <hr>
    <br>
    <section class="row">
        <div>
            {{#with goodsOtherBlock}}
            <h2 class="text-center"> {{title}}</h2>
            <div class="row">
                {{#each cards}}
                <div class="card col-4">
                    <img src="{{image}}" class="card-img-top" alt="image">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}
                            {{#if isHot}} <span class="badge rounded-pill bg-warning">Hot</span>{{/if}}
                            {{#if isNew}}<span class="badge rounded-pill bg-primary">New</span>{{/if}}</h5>
                        <p class="card-text"> {{description}} </p>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </section>
    <br>
    <hr>
    <br>
    <section class="row">
        <div class="card text-bg-dark">
            {{#with subscribe}}
            <h2>{{header}}</h2>
            <p> {{description}}</p>
            <div>
                {{#each buttons}}
                <div class="col-3 m-2">
                    <a href="{{link}}" class="btn btn-primary"> {{text}}</a>
                </div>
                {{/each}}
            </div>

            {{/with}}
        </div>
    </section>
    <br>
    <hr>
    <br>
    {{>shopfooter}}
</main>