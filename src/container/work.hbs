<div>
    {{#with main}}
    <main>
        <section>
            {{>title big=true data='My Work' }}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div> {{position}}</div>

                        <br>

                        <div> {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (Працюю по цей час)
                            {{/if}}
                        </div>

                        <br>

                        {{#if company.url}}
                        <div> {{>link text=company.name href=company.url blank=true noLine=true}}</div>
                        {{else}}
                        <b> {{company.name}}</b>
                        {{/if}}
                        <br>
                        <br>

                        <div>
                            <strong> Project - ({{projectAmount}}) </strong>
                        </div>

                        <br>
                        <ul>
                            {{#each projects}}
                            <li>
                                <div>
                                    {{> link text=name href=url blank=true noLine=true }}
                                </div>

                                <br>

                                <div>
                                    <p> {{about}}</p>
                                </div>

                                <br>

                                <div>
                                    <ul>
                                        <em> Project stacks: ({{stackAmount}}) </em>
                                        <br>
                                        <br>
                                        {{#each stacks}}
                                        <li> {{name}} </li>
                                        {{/each}}
                                    </ul>
                                </div>

                                <br>
                                <div>
                                    <ul>
                                        <em> Project awards: </em>
                                        <br>
                                        <br>
                                        {{#each awards}}
                                        <li> {{name}} </li>
                                        {{/each}}
                                    </ul>
                                </div>

                            </li>
                            {{/each}}
                        </ul>
                    </li>
                    <br>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>