<div class="row">

    <section class="card">
        <div class="row">
            <h2 class="col-4"> {{navigation.Logo}} </h2>
            <div class="col-7 pe-0">
                <ul class="nav justify-content-end">
                    {{#each navigation.links}}
                    <li class="nav-item">
                        <a class="nav-link active {{#if @last}} nav-link disabled" {{/if}} href="{{href}}"> {{text}}</a>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </section>

    <section class="row">
        <h1 class="text-center mt-5"> {{newsBlock.title}}</h1>
        <div class="row">
            {{#each newsBlock.cards}}
            <div class="card col-3 my-1 text-bg-dark">
                <div class="card-body">
                    <h5 class="card-title"> {{title}} {{#if isTop}}<span
                            class="badge rounded-pill bg-danger">Top</span>{{/if}}
                        {{#if isNew}}<span class="badge rounded-pill bg-success">New</span>{{/if}}
                    </h5>
                    <p class="card-text">{{description}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </section>

    <div class="mt-2 mb-2">
        <hr>
    </div>

    <section class="row">
        <div>
            <ul class="nav nav-tabs pe-1">
                {{#each goodsBlock.tabs}}
                <li class="nav-item">
                    {{#if isActive}}
                    <a class="nav-link active" href="#"> <b>{{text}}</b></a>
                </li>
                {{else}}
                {{#if isDisabled}}
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">{{text}}</a>
                    {{else}}
                    <a class="nav-link" href="#"> {{text}}</a>
                </li>
                {{/if}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </section>

    <section class="row">
        {{#each goodsBlock.cards}}
        <div class="card col-3 m-3 ps-2">
            <img src="{{image}}" class="card-img-top" alt="image">
            <div class="card-body">
                <h5 class="card-title"> {{title}} {{#if isHot}}<span
                        class="badge rounded-pill bg-warning">Hot</span>{{/if}}
                    {{#if isNew}}<span class="badge rounded-pill bg-primary">New</span>{{/if}}
                </h5>
                <p class="card-text"> {{description}}</p>
            </div>
        </div>
        {{/each}}
    </section>

    <div class="mt-2 mb-2">
        <hr>
    </div>

    <section class="row">
        <div class="card text-bg-dark">
            <div class="row">
                {{#with subscribe}}

                <div class="col-6">
                    <h2> {{header}}</h2>
                    <p> {{description}}</p>
                </div>

                <div class="col-6  pt-3 pe-0">
                    {{#each buttons}}
                    <button type="button" class="btn btn-primary" href="{{link}}">{{text}}</button>
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </div>
    </section>

    <div class="mt-2 mb-2">
        <hr>
    </div>

    <section class="row">
        <div class="card text-bg-success text-center">
            {{#with service}}
            <h2> {{title}}</h2>
            <p> {{description}}</p>
            <div class="col-12">
                {{#each buttons}}
                <button type="button" class="btn btn-primary" href="{{link}}">{{text}}</button>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </section>

    <div class="mt-2 mb-2">
        <hr>
    </div>

    <section class="row">
        {{#each footer}}
        <div class="nav col-2">
            <div>
                {{#each this}}
                <div>
                    <a class="nav-link {{#if @last}} disabled{{/if}}" href="{{this.link}}"> {{this.text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </section>
</div>