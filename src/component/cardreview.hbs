<section class="card">
    {{#each reviewList}}
    <div class="card m-2 mb-5">
        {{#with title}}
        <div class="card-header">
            <div class="display-6">{{userName}}</div>
            <p>{{caption}}</p>
            <p> {{date}}</p>
        </div>
        {{/with}}
        <div class="card body">
            <div>
                {{#with reviewBody}}
                <p>{{seller.title}}: {{seller.value}}</p>
                <p> {{rating.title}}: {{rating.value}}</p>
                <div class="card-text"> {{text}}</div>

                <div>
                    <b> {{advantages.title}}</b>
                    <p> {{advantages.text}}</p>
                </div>

                <div>
                    <b> {{disadvantages.title}}</b>
                    <p> {{disadvantages.text}}</p>
                </div>
                <div class="row">
                    {{#each images}}
                    <div class="col-2">
                        <img src="{{this}}" class="card-img-top" alt="image">
                    </div>
                    {{/each}}
                </div>
                <div>
                    {{#each coments}}
                    <div class="card m-2 ms-5">
                        <div class="display-6"> {{userName}}</div>
                        <p> {{date}}</p>
                        <p> {{text}}</p>
                    </div>
                    {{/each}}

                </div>

                {{/with}}
            </div>

            <div>
                <b> {{advantages.title}}</b>
                <p> {{advantages.text}}</p>
            </div>
        </div>
    </div>
    {{/each}}
</section>